---
// src/components/Header.astro
const { activeNav = "journal" } = Astro.props;
---
<style>
  header {
    margin-bottom: 5rem;
  }

  /* サイトタイトル */
  .site-identity {
    display: block;
    font-family: "IBM Plex Sans JP", sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    line-height: 1;
    text-decoration: none;
    color: #111;
    margin-bottom: 1.5rem; /* ナビゲーションとの距離 */
    transition: opacity 0.2s;
  }
  .site-identity:hover {
    opacity: 0.6;
  }

  /* ナビゲーション (The Three Doors) */
  nav {
    display: flex;
    gap: 1.5rem;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
  }

  .nav-link {
    text-decoration: none;
    color: #999; /* 非アクティブ時はグレー */
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: #111;
  }

  /* 今いる部屋を黒く強調 */
  .active {
    color: #111;
    font-weight: 500;
  }
</style>

<header>
  <a href="/" class="site-identity">Tomohiro Ogawa</a>
  
  <nav>
    <a href="/" class={`nav-link ${activeNav === 'journal' ? 'active' : ''}`}>[Journal]</a>
    <a href="/collection" class={`nav-link ${activeNav === 'collection' ? 'active' : ''}`}>[Collection]</a>
    <a href="/projects" class={`nav-link ${activeNav === 'projects' ? 'active' : ''}`}>[Projects]</a>
  </nav>
</header>
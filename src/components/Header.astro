---
// src/components/Header.astro
const { activeNav = "journal" } = Astro.props;
---
<style>
  header {
    /* STICKY POSITIONING */
    position: sticky;
    top: 0;
    z-index: 100;
    
    /* THE TRICK: 親のパディング(6rem)を相殺 */
    margin-top: -6rem;
    margin-left: -2rem;
    margin-right: -2rem;
    padding-top: 6rem;
    padding-left: 2rem;
    padding-right: 2rem;
    padding-bottom: 1.5rem;
    
    margin-bottom: 4rem;

    /* FROSTED GLASS EFFECT */
    background-color: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    
    /* REMOVED: 境界線を完全削除 */
    border-bottom: none;
    box-shadow: none; /* 念のため影も無効化 */
  }

  /* サイトタイトル */
  .site-identity {
    display: block;
    font-family: "IBM Plex Sans JP", sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    line-height: 1;
    text-decoration: none;
    color: #111;
    margin-bottom: 1.5rem;
    transition: opacity 0.2s;
  }
  .site-identity:hover {
    opacity: 0.6;
  }

  /* ナビゲーション */
  nav {
    display: flex;
    gap: 1.5rem;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.8rem;
  }

  .nav-link {
    text-decoration: none;
    color: #999;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: #111;
  }

  .active {
    color: #111;
    font-weight: 500;
  }
</style>

<header>
  <a href="/" class="site-identity">Tomohiro Ogawa</a>
  
  <nav>
    <a href="/" class={`nav-link ${activeNav === 'journal' ? 'active' : ''}`}>[Journal]</a>
    <a href="/collection" class={`nav-link ${activeNav === 'collection' ? 'active' : ''}`}>[Collection]</a>
    <a href="/projects" class={`nav-link ${activeNav === 'projects' ? 'active' : ''}`}>[Projects]</a>
  </nav>
</header>
---
const { frontmatter } = Astro.props;
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{frontmatter.title} | Tomohiro Ogawa</title>
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Noto+Sans+JP:wght@300;400;600&display=swap" rel="stylesheet">

		<style>
			/* Reset & Base */
			* { box-sizing: border-box; }
			
			body {
				font-family: "Inter", "Noto Sans JP", sans-serif;
				font-weight: 400;
				font-feature-settings: "palt";
				background-color: #fff;
				color: #111;
				margin: 0;
				display: flex;
				justify-content: center;
				min-height: 100vh;
			}

			.grid-container {
				width: 100%;
				max-width: 720px;
				padding: 6rem 2rem;
				display: flex;
				flex-direction: column;
			}

			.nav {
				margin-bottom: 4rem;
				font-size: 0.75rem;
			}
			.back-link {
				text-decoration: none;
				color: #999;
				transition: color 0.2s;
				font-family: "Inter", sans-serif; /* 英語なのでInter */
			}
			.back-link:hover { color: #111; }

			header {
				margin-bottom: 5rem;
			}

			h1 {
				font-size: 2rem;
				font-weight: 600; /* 太すぎず、構造的な強さ */
				margin: 0 0 1rem 0;
				line-height: 1.2;
				letter-spacing: -0.01em;
			}
			time {
				font-family: "Inter", sans-serif;
				font-feature-settings: "tnum";
				color: #666;
				font-size: 0.8rem;
				display: block;
			}

			/* Content */
			main {
				font-size: 1rem;
				line-height: 1.8;
				font-weight: 400;
			}
			main :global(p) {
				margin-bottom: 2rem;
				text-align: justify;
			}
			main :global(h2) {
				font-size: 1.2rem;
				font-weight: 600;
				margin-top: 4rem;
				margin-bottom: 1.5rem;
				letter-spacing: 0.02em;
			}
			main :global(img) {
				max-width: 100%;
				height: auto;
				display: block;
				margin: 3rem 0;
			}
			main :global(ul) {
				padding-left: 1rem;
				margin-bottom: 2rem;
			}
			main :global(li) {
				margin-bottom: 0.5rem;
			}
			main :global(blockquote) {
				margin: 3rem 0;
				padding-left: 1.5rem;
				border-left: 1px solid #111;
				font-style: italic;
				color: #555;
			}
		</style>
	</head>
	<body>
		<div class="grid-container">
			<nav class="nav">
				<a href="/" class="back-link">&lt; INDEX</a>
			</nav>

			<header>
				<h1>{frontmatter.title}</h1>
				<time datetime={frontmatter.pubDate}>
					{new Date(frontmatter.pubDate).toLocaleDateString('en-CA')}
				</time>
			</header>

			<main>
				<slot />
			</main>
		</div>
	</body>
</html>
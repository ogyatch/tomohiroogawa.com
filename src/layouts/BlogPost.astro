---
const { frontmatter } = Astro.props;
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{frontmatter.title} | Tomohiro Ogawa</title>
		<style>
			/* Base Structure */
			* { box-sizing: border-box; }
			
			body {
				font-family: "Helvetica Neue", Arial, sans-serif;
				background-color: #fff;
				color: #111;
				margin: 0;
				display: flex;
				justify-content: center;
				min-height: 100vh;
			}

			/* The Grid Container: index.astroと同一寸法 */
			.grid-container {
				width: 100%;
				max-width: 720px;
				padding: 6rem 2rem;
				display: flex;
				flex-direction: column;
			}

			/* The Axis Wrapper */
			.axis-wrapper {
				border-left: 1px solid #e5e5e5;
				padding-left: 3rem; /* index.astroと同一余白 */
				min-height: 50vh;
			}

			/* Navigation */
			.nav {
				margin-bottom: 2rem;
			}
			.back-link {
				text-decoration: none;
				color: #999;
				font-size: 0.75rem;
				font-family: monospace;
				display: inline-flex;
				align-items: center;
			}
			.back-link::before {
				content: '';
				display: inline-block;
				width: 8px;
				height: 1px;
				background-color: #999;
				margin-right: 8px;
			}

			/* Header */
			header {
				margin-bottom: 3rem;
			}
			h1 {
				font-size: 1.8rem;
				font-weight: 700;
				margin: 0 0 0.5rem 0;
				line-height: 1.2;
				letter-spacing: -0.02em;
			}
			time {
				font-family: monospace;
				color: #666;
				font-size: 0.8rem;
			}

			/* Content Typography (Max Bill Style) */
			main {
				font-size: 0.95rem;
				line-height: 1.7;
			}
			main :global(p) {
				margin-bottom: 1.5rem;
				text-align: justify;
			}
			main :global(h2) {
				font-size: 1.1rem;
				font-weight: 700;
				margin-top: 3rem;
				margin-bottom: 1rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			main :global(img) {
				max-width: 100%;
				height: auto;
				border: 1px solid #eee;
				display: block;
				margin: 2rem 0;
			}
			main :global(ul) {
				padding-left: 1rem;
				margin-bottom: 2rem;
			}
			main :global(li) {
				margin-bottom: 0.5rem;
			}
			main :global(blockquote) {
				margin: 2rem 0;
				padding-left: 1rem;
				border-left: 2px solid #111; /* Strong Contrast */
				font-style: italic;
			}
		</style>
	</head>
	<body>
		<div class="grid-container">
			<div class="axis-wrapper">
				<nav class="nav">
					<a href="/" class="back-link">INDEX</a>
				</nav>

				<header>
					<h1>{frontmatter.title}</h1>
					<time datetime={frontmatter.pubDate}>
						{new Date(frontmatter.pubDate).toLocaleDateString('en-CA')}
					</time>
				</header>

				<main>
					<slot />
				</main>
			</div>
		</div>
	</body>
</html>
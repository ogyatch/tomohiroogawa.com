---
import Header from '../components/Header.astro';

const projects = [
  {
    title: "tomohiroogawa.com",
    year: "2026",
    category: "Web",
    stack: ["Astro", "GitHub Actions"],
    status: "LIVE",
    description: "デジタル空間における自己の構造化。思考の記録[Journal]、美の記録[Collection]、仕様の記録[Projects]で構成されている。",
    link: "https://tomohiroogawa.com",
    linkText: "View Source"
  },
  {
    title: "PNG Compress Saver",
    year: "2024",
    category: "Chrome Extension",
    stack: ["JavaScript", "UPNG.js", "Chrome Extension API"],
    status: "LIVE",
    description: "右クリックメニューからWebページ上の画像をPNG形式で保存するChrome拡張機能。UPNG.jsによる圧縮保存にも対応し、CORS環境下でも動作する。データ収集を一切行わないプライバシー重視の設計。",
    link: "https://chromewebstore.google.com/detail/png-compress-saver/gdcjcejhafehleiemkieegpkdbkpjgao",
    linkText: "Chrome Web Store"
  }
];
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Projects | Tomohiro Ogawa</title>
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans+JP:wght@300;400;600&display=swap" rel="stylesheet">

		<style>
			* { box-sizing: border-box; }
			html { scrollbar-gutter: stable; }
			body {
				font-family: "IBM Plex Sans JP", sans-serif;
				font-weight: 400;
				font-feature-settings: "palt";
				background-color: #fff;
				color: #111;
				margin: 0;
				display: flex;
				justify-content: center;
				min-height: 100vh;
			}
			.grid-container {
				width: 100%;
				max-width: 720px;
				padding: 6rem 2rem;
				display: flex;
				flex-direction: column;
			}

			.project-list {
				display: flex;
				flex-direction: column;
			}

			.project-item {
				/* 基本設定：すべてのアイテムの上に線を引く */
				border-top: 1px solid #eaeaea;
				padding: 4rem 0;
				display: flex;
				flex-direction: column;
			}
			
			.project-item:first-child {
				border-top: none;
				padding-top: 0;
			}

			.project-header {
				display: flex;
				justify-content: space-between;
				align-items: baseline;
				flex-wrap: wrap;
				gap: 1rem;
				margin-bottom: 0.8rem;
			}

			.project-title {
				font-size: 1.4rem;
				font-weight: 600;
				line-height: 1.2;
				letter-spacing: 0.02em;
				margin: 0;
			}

			/* UNIFIED META STYLE */
			.project-meta {
				font-family: "IBM Plex Mono", monospace;
				font-size: 0.75rem;
				color: #888; /* 統一カラー */
			}

			/* UNIFIED META STYLE */
			.tech-stack {
				font-family: "IBM Plex Mono", monospace;
				font-size: 0.75rem;
				color: #888; /* 統一カラー */
				margin-bottom: 2.5rem; 
			}

			.status-tag {
				display: inline-block;
				border: none;
				padding: 0;
				font-weight: 500;
				margin-right: 0.8rem;
				color: #888; /* 統一カラー（以前は#111） */
			}

			.project-desc {
				font-size: 1rem;
				line-height: 1.8;
				color: #333;
				max-width: 95%;
				text-align: justify;
				margin: 0;
				margin-bottom: 2.5rem;
			}

			.project-link {
				font-family: "IBM Plex Mono", monospace;
				font-size: 0.8rem;
				color: #111;
				text-decoration: none;
				align-self: flex-start;
				border-bottom: 1px solid #111;
				padding-bottom: 2px;
				transition: opacity 0.2s;
			}
			.project-link:hover {
				opacity: 0.5;
			}
		</style>
	</head>
	<body>
		<div class="grid-container">
			<Header activeNav="projects" />
            
            <main class="project-list">
                {projects.map((project) => (
                    <article class="project-item">
                        <header class="project-header">
                            <h2 class="project-title">{project.title}</h2>
                            <span class="project-meta">{project.category} — {project.year}</span>
                        </header>
                        
                        <div class="tech-stack">
                            <span class="status-tag">[{project.status}]</span>
                            {project.stack.join(' / ')}
                        </div>

                        <p class="project-desc">
                            {project.description}
                        </p>

                        <a href={project.link} class="project-link">
                            {project.linkText} ->
                        </a>
                    </article>
                ))}
            </main>
		</div>
	</body>
</html>
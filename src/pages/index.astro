/* Aesthetics: Centered Axis Style */
			body {
				font-family: "Helvetica Neue", Arial, sans-serif;
				/* フレックスボックスで全体を強制的に中央揃えにする */
				display: flex;
				flex-direction: column;
				align-items: center; 
				min-height: 100vh;
				margin: 0;
				padding: 6rem 2rem;
				color: #333;
				background-color: #f9f9f9;
			}

			header {
				margin-bottom: 5rem;
				text-align: center; /* 名前は中央に戻す */
				width: 100%;
			}
			h1 {
				font-weight: 300; /* より細く、洗練させる */
				letter-spacing: 0.2em; /* 字間を広げて気品を出す */
				margin: 0 0 0.8rem 0;
				font-size: 1.5rem;
			}
			.subtitle {
				font-size: 0.7rem;
				color: #aaa;
				letter-spacing: 0.3em;
				text-transform: uppercase;
			}

			/* Timeline Architecture */
			main {
				/* コンテンツの幅を制限し、中央の柱（Pillar）にする */
				max-width: 600px;
				width: 100%;
				/* 時間軸の線 */
				border-left: 1px solid #e0e0e0; 
				padding-left: 2.5rem; /* 線と文字の距離 */
				padding-bottom: 4rem;
				position: relative;
			}

			/* 以下、記事リストのデザインは維持 */
			.entry {
				position: relative;
				margin-bottom: 5rem; /* 余白を増やして呼吸させる */
			}
			.entry::before {
				content: '';
				position: absolute;
				left: -2.85rem; /* 線の位置にドットを合わせる調整 */
				top: 0.5rem;
				width: 5px;
				height: 5px;
				background-color: #333;
				border-radius: 50%;
				transition: transform 0.2s;
			}
			.entry:hover::before {
				transform: scale(1.8);
			}

			.meta {
				display: flex;
				gap: 1rem;
				font-family: monospace;
				font-size: 0.7rem;
				color: #aaa;
				margin-bottom: 0.4rem;
				letter-spacing: 0.05em;
			}
			.number { color: #ddd; }

			.title-link {
				display: block;
				text-decoration: none;
				color: #333;
				font-size: 1.1rem;
				font-weight: 400;
				line-height: 1.5;
				transition: opacity 0.2s;
			}
			.title-link:hover { opacity: 0.5; }
			
			.excerpt {
				margin-top: 0.8rem;
				font-size: 0.85rem;
				color: #777;
				line-height: 1.7;
				font-weight: 300;
			}
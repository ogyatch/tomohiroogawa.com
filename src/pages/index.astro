---
// Logic: 記事データの収集と整形
const posts = await Astro.glob('./journal/*.md');

// 日付の新しい順にソート
const sortedPosts = posts.sort((a, b) => 
  new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Tomohiro Ogawa</title>
		<style>
			/* Aesthetics: Centered Axis Style */
			body {
				font-family: "Helvetica Neue", Arial, sans-serif;
				/* フレックスボックスで全体を強制的に中央揃えにする */
				display: flex;
				flex-direction: column;
				align-items: center; 
				min-height: 100vh;
				margin: 0;
				padding: 6rem 2rem;
				color: #333;
				background-color: #f9f9f9;
			}

			header {
				margin-bottom: 5rem;
				text-align: center; /* 名前は中央 */
				width: 100%;
			}
			h1 {
				font-weight: 300;
				letter-spacing: 0.2em;
				margin: 0 0 0.8rem 0;
				font-size: 1.5rem;
			}
			.subtitle {
				font-size: 0.7rem;
				color: #aaa;
				letter-spacing: 0.3em;
				text-transform: uppercase;
			}

			/* Timeline Architecture */
			main {
				/* コンテンツの幅を制限し、中央の柱（Pillar）にする */
				max-width: 600px;
				width: 100%;
				/* 時間軸の線 */
				border-left: 1px solid #e0e0e0; 
				padding-left: 2.5rem;
				padding-bottom: 4rem;
				position: relative;
			}

			/* 記事リストのデザイン */
			.entry {
				position: relative;
				margin-bottom: 5rem; /* 余白を増やして呼吸させる */
			}
			.entry::before {
				content: '';
				position: absolute;
				left: -2.85rem; /* 線の位置にドットを合わせる調整 */
				top: 0.5rem;
				width: 5px;
				height: 5px;
				background-color: #333;
				border-radius: 50%;
				transition: transform 0.2s;
			}
			.entry:hover::before {
				transform: scale(1.8);
			}

			.meta {
				display: flex;
				gap: 1rem;
				font-family: monospace;
				font-size: 0.7rem;
				color: #aaa;
				margin-bottom: 0.4rem;
				letter-spacing: 0.05em;
			}
			.number { color: #ddd; }

			.title-link {
				display: block;
				text-decoration: none;
				color: #333;
				font-size: 1.1rem;
				font-weight: 400;
				line-height: 1.5;
				transition: opacity 0.2s;
			}
			.title-link:hover { opacity: 0.5; }
			
			.excerpt {
				margin-top: 0.8rem;
				font-size: 0.85rem;
				color: #777;
				line-height: 1.7;
				font-weight: 300;
			}
		</style>
	</head>
	<body>
		<header>
			<h1>Tomohiro Ogawa</h1>
			<span class="subtitle">Poet of Technology</span>
		</header>

		<main>
			{sortedPosts.map((post, index) => {
				const entryNumber = String(sortedPosts.length - index).padStart(3, '0');
				
				return (
					<article class="entry">
						<div class="meta">
							<span class="number">#{entryNumber}</span>
							<time datetime={post.frontmatter.pubDate}>
								{new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', {
									year: 'numeric', month: '2-digit', day: '2-digit'
								}).replace(/\//g, '.')}
							</time>
						</div>
						<a href={post.url} class="title-link">
							{post.frontmatter.title}
						</a>
						{post.frontmatter.description && (
							<p class="excerpt">{post.frontmatter.description}</p>
						)}
					</article>
				)
			})}
		</main>
	</body>
</html>